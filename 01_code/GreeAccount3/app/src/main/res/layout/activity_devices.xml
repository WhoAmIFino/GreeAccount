<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root_view_style"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/item_layout"
        android:clickable="false">

        <TextView
            android:id="@+id/devices_title"
            style="@style/item_left_txv"
            android:text="@string/devices_title" />

        <TextView
            style="@style/item_des_txv"
            android:layout_below="@id/devices_title"
            android:text="@string/device_des" />

    </RelativeLayout>

    <ListView
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:divider="@color/gree_gray"
        android:dividerHeight="2px"
        android:layout_height="match_parent" />

</LinearLayout>
