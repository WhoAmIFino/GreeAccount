<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:background="@drawable/gui_common_dialog_corners"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        style="@style/layout_wrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialog_title_margin"
        android:textColor="@color/gree_black"
        android:text="@string/input_account_pwd"
        android:textSize="@dimen/dialog_title_size" />

    <com.gree.greeaccount.widget.PasswdEditView
        android:id="@+id/password_edt"
        style="@style/edt_layout"
        android:layout_marginBottom="@dimen/dialog_title_margin"
        android:layout_marginTop="@dimen/dialog_title_margin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gree_gray" />

    <Button
        android:id="@+id/confirm_btn"
        style="@style/btn_black"
        android:layout_margin="0dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:text="@string/next_step"
        android:textColor="@color/gree_blue" />

</LinearLayout>